{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
